# ===========================================
# CONFIGURACIÓN DEL SISTEMA
# ===========================================

# Entorno de ejecución
NODE_ENV=development

# Puerto del servidor
PORT=5000

# ===========================================
# BASE DE DATOS
# ===========================================

# URL de conexión a MongoDB
DATABASE_URL="mongodb://localhost:27017/rendimiento_inmobiliaria"

# Configuración del pool de conexiones
DB_CONNECTION_LIMIT=10
DB_POOL_TIMEOUT=10000
DB_CONNECT_TIMEOUT=10000
DB_QUERY_TIMEOUT=30000
DB_MAX_RETRIES=3
DB_RETRY_DELAY=1000

# ===========================================
# AUTENTICACIÓN
# ===========================================

# Secreto para firmar JWTs (mínimo 32 caracteres)
JWT_SECRET="tu-secreto-super-seguro-de-al-menos-32-caracteres"

# ===========================================
# CACHE REDIS (OPCIONAL)
# ===========================================

# URL de conexión a Redis
REDIS_URL="redis://localhost:6379"

# Configuración de Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# IA Y ANÁLISIS
# ===========================================

# API Key de Google Gemini
GEMINI_API_KEY="tu-api-key-de-google-gemini"

# ===========================================
# RATE LIMITING
# ===========================================

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# LOGGING
# ===========================================

# Nivel de logging
LOG_LEVEL=info

# Directorio de logs
LOG_DIR=./logs

# ===========================================
# SEGURIDAD
# ===========================================

# CORS origins permitidos (separados por coma)
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

