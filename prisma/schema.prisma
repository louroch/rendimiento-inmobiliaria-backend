// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  role      String   @default("agent") // valores: "admin", "agent"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  performance Performance[]

  @@map("users")
}

model Performance {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  userId              String   @db.ObjectId
  fecha               DateTime
  consultasRecibidas  Int
  muestrasRealizadas  Int?     // Hacer opcional para agentes sin muestras
  operacionesCerradas Int
  numeroCaptaciones   Int?     // Número de captaciones realizadas
  seguimiento         Boolean  @default(false)
  usoTokko            String?
  
  // NUEVOS CAMPOS SOLICITADOS
  cantidadPropiedadesTokko Int?     // Cantidad de propiedades cargadas en Tokko
  linksTokko              String?   // Links de las propiedades (separados por comas)
  dificultadTokko         Boolean?  // ¿Se te dificultó el uso de Tokko?
  detalleDificultadTokko  String?   // Detalle de la dificultad (si eligió "Sí")
  observaciones           String?   // Campo de observaciones generales
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relaciones
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("performance")
}

